<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/transparent"/>

    <!-- Border (Stroke) -->
    <stroke
        android:color="#FAB12F"
        android:width="2dp"/>

    <!-- Corner radius (optional, adjust as needed) -->
    <corners android:radius="30dp"/>

    <!-- Padding (optional) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
